<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Material.MaterialSelectActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_content"
            android:text="remember"
            android:singleLine="false"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/textview_border"
            android:layout_margin="@dimen/border_margin_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="250dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_positive"
                android:text="正面"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/button_border_selected"
                android:layout_marginLeft="@dimen/border_margin_big"
                android:padding="@dimen/border_margin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_reverse"
                android:text="反面"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/fontBlack"
                android:background="@drawable/button_border"
                android:layout_marginRight="@dimen/border_margin_big"
                android:padding="@dimen/border_margin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_margin_big">

            <Button
                android:id="@+id/btn_prev"
                android:text="上一个"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/fontBlack"
                android:background="@drawable/button_border"
                android:layout_marginLeft="@dimen/border_margin_big"
                android:padding="@dimen/border_margin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_next"
                android:text="已记住"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/fontBlack"
                android:background="@drawable/button_border"
                android:layout_marginRight="@dimen/border_margin_big"
                android:padding="@dimen/border_margin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/tv_describe"-->
        <!--android:text="vt./vi. 记得 牢记\nvt. 记着 纪念 回想起 送钱[礼物]给"-->
        <!--android:background="@drawable/textview_border"-->
        <!--android:layout_margin="@dimen/border_margin_big"-->
        <!--android:padding="30dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:minHeight="@dimen/square_height_big"/>-->

        <!--横向三个-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--金盒子-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/border_margin_big"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_copper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/box_golden"
                    android:layout_marginBottom="-25dp" />

                <TextView
                    android:text="金盒子"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--银盒子-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/border_margin_big"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_wood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/box_silver"
                    android:layout_marginBottom="-25dp" />

                <TextView
                    android:text="银盒子"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--铁盒子-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/border_margin_big"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_ice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/box_copper"
                    android:layout_marginBottom="-25dp" />

                <TextView
                    android:text="铁盒子"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>