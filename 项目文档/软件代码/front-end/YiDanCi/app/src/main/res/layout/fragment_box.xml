<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BoxFragment">

    <!--横向三个-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--金盒子-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/border_margin_big"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gold_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box_golden" />

            <TextView
                android:id="@+id/gold_boxes"
                android:text="金盒子"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--银盒子-->
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/border_margin_big"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sliver_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box_silver" />

            <TextView
                android:text="银盒子"
                android:id="@+id/sliver_boxes"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout
            >

        <!--铁盒子-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/border_margin_big"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iron_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box_copper" />

            <TextView
                android:id="@+id/iron_boxes"
                android:text="铁盒子"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>